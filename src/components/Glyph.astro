---
export interface Props {
    img: string
    lang: string
}
const { img, lang } = Astro.props as Props

const importedSvg = await import(`../assets/lang/${lang}/glyphs/${img}.svg?raw`)
const svgContent = importedSvg.default
---

<Fragment set:html={svgContent}/>

<style lang="scss" is:global>
    svg {
        fill: currentColor;
    }
</style>