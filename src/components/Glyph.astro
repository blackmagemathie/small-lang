---
export interface Props {
    src: string
    lang: string
}

const { src, lang } = Astro.props as Props

const importedSvg = await import(`../assets/lang/${lang}/glyphs/${src}.svg?raw`)
const svgContent = importedSvg.default

---

<Fragment set:html={svgContent}/>

<style lang="scss" is:global>
    svg {
        fill: currentColor;
    }
</style>