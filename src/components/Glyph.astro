---
export interface Props {
    src: string
}

const { src } = Astro.props as Props

const importedSvg = await import(/* @vite-ignore */`${src}?raw`)
const svgContent = importedSvg.default

---

<Fragment set:html={svgContent}/>

<style lang="scss" is:global>
    svg {
        fill: currentColor;
    }
</style>