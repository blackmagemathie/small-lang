---
import GlyphBlock from '@/components/GlyphBlock.astro'
import type { TypeGridGlyph } from "./TypeGridGlyph"

export interface Props {
    glyphs: TypeGridGlyph[]
    lang: string
}

const { glyphs=[], lang } = Astro.props as Props
---

<div class="max-w-4xl my-8 grid grid-cols-6 gap-4">
    {glyphs.map(glyph => (
        <GlyphBlock glyph={{lang:lang,src:glyph.src}} url={glyph.url} />
    ))}
</div>