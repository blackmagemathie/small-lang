---
import Glyph from '@/components/Glyph.astro'

export interface Props {
    name: string
    img: string
    lang: string
    url?: string
}
const { name, img, lang, url } = Astro.props as Props
---

<div class="glyph-block aspect-square rounded-sm" title={name}>
    {url ? (
        <a href={url} class="block h-full w-full">
            <div class="grid h-full">
                <div class="sub m-auto">
                    <Glyph lang={lang} img={img} />
                </div>
            </div>
        </a>
    ):(
        <div class="grid h-full w-full">
            <div class="sub m-auto">
                <Glyph lang={lang} img={img} />
            </div>
        </div>
    )}
</div>

<style lang="scss">
    .glyph-block {
        color: var(--color-ink);
        background-color: color-mix(in srgb, var(--color-paper), var(--color-stone) 50%);
        &:has(a) {
            background-color: color-mix(in srgb, var(--color-paper), var(--color-gem) 20%);
            &:hover {
                background-color: var(--color-gem);
                color: var(--color-paper);
            }
        }
    }
    .sub {
        width: 60%;
        height: 60%;
    }
</style>