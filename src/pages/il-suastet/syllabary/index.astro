---
import Layout from '@/layouts/Layout.astro'
import Ariadne from '@/components/Ariadne.astro'
import GlyphGrid from '@/components/GlyphGrid.astro'
import Section from '@/components/Section.astro'
import type { TypeGridGlyph } from '@/components/TypeGridGlyph'
import { Lang2Object_to_GridGlyph } from "@/types/Lang2"

const ariadne = [
    { name: "home", url: "/" },
    { name: "Il'suastet", url: "/il-suastet" },
    { name: "syllabary" }
]

import vowel_families from "./vowel-families/_vowel_families.json"
const grid_vowel_families:TypeGridGlyph[] = vowel_families.map((o) => (Lang2Object_to_GridGlyph(o,"/il-suastet/syllabary/vowel-families/")))

import consonant_families from "./consonant-families/_consonant_families.json"
const grid_consonant_families:TypeGridGlyph[] = consonant_families.map((o) => (Lang2Object_to_GridGlyph(o,"/il-suastet/syllabary/consonant-families/")))

import compounds from "./compounds/_compounds.json"
const grid_compounds:TypeGridGlyph[] = compounds.map((o) => (Lang2Object_to_GridGlyph(o,"/il-suastet/syllabary/compounds/")))
---

<Layout tab="syllabary < Il'suastet">
    <main class="container max-w-3xl px-8 mx-auto">

        <h1>syllabary</h1>
        <Ariadne links={ariadne}/>

        <!-- consonants -->
        <Section>consonant families</Section>
        <GlyphGrid glyphs={grid_consonant_families} lang="lang2" />

        <!-- vowels -->
        <Section>vowel families</Section>
        <GlyphGrid glyphs={grid_vowel_families} lang="lang2" />

        <!-- compounds -->
        <Section>all compounds</Section>
        <GlyphGrid glyphs={grid_compounds} lang="lang2" />


    </main>
</Layout>